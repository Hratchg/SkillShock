# SkillShock Environment Variables
# Copy this file to .env and fill in your keys:
#   cp .env.example .env

# Google Gemini API key (required for AI Career Planner)
# Get one at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Enable RAG-powered context retrieval (optional, requires heavy deps)
# Set to "false" to use lightweight exact-match fallback instead
USE_RAG=false

# RapidFire AI (optional â€” for publishing dashboard to RapidFire)
RAPIDFIRE_API_KEY=your-rapidfire-api-key-here
RAPIDFIRE_UPLOAD_URL=https://your-rapidfire-upload-url

# Data directory (default: ./data)
DATA_DIR=./data

# SQLite database path (default: ./skillshock.db)
DB_PATH=./skillshock.db

# Pipeline output path (default: ./output.json)
OUTPUT_PATH=./output.json
